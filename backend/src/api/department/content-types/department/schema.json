      "type": "string",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "thmbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "depratmentType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "عام",
        "خاص"
      ]
    },
    "specializtion": {
      "type": "component",
      "component": "specializtion.specializtion",
      "repeatable": true
    },
    "articles": {
      "type": "component",
      "component": "article-component.article",
      "repeatable": true
